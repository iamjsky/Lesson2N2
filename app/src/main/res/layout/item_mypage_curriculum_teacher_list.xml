<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_teacher_list_item"
    android:layout_marginBottom="20dp"
    >


    <LinearLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="horizontal"
        android:padding="20dp">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:gravity="left|top"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ToggleButton
                    android:id="@+id/tbtn_hide"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textOff="숨김"
                    android:textOn="노출"
                    app:showText="true"
                    android:textAllCaps="false"
                    android:background="@drawable/selector_mypage_curriculm_item"
                    android:layout_width="50dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:text="피아노 하울의 움직이는 성 마스터 가나다라마바사아자차카타파하"
                    android:textSize="18sp" />

            </LinearLayout>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center|start"
                android:maxLines="1"
                android:text="100,000 원"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center|start"
                    android:maxLines="1"
                    android:text="주 2회 / 총 4주"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:text="(2022-08-01 ~ 2022-08-31)"
                    android:textSize="18sp" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center|start"
                android:maxLines="1"
                android:text="악보를 볼 수 없어도 가능해요. / 학습경력 : 무관"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView

                android:layout_width="140dp"
                android:layout_height="wrap_content"

                android:background="@color/RoyalBlue"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="매칭중 : 999명"
                android:textColor="@color/white"
                android:textSize="18sp"
               />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="140dp"
                android:layout_height="wrap_content"

                android:background="@color/green_400"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="매칭중 : 99명"
                android:textColor="@color/white"
                android:textSize="18sp"
               />
            <TextView
                android:layout_marginTop="10dp"

                android:layout_width="140dp"
                android:layout_height="wrap_content"

                android:background="@color/Gray"
                android:gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="종료 : 9명"
                android:textColor="@color/white"
                android:textSize="18sp"
              />

        </LinearLayout>

    </LinearLayout>





</RelativeLayout>