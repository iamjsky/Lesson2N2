<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="kr.co.soundleader.android.lesson2n2.ui.sign.viewmodel.SignDialogSharedViewModel" />

    </data>


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="@color/black"
            android:gravity="center|start"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/tv_title"
            android:text="비밀번호 찾기"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:padding="20dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:gravity="center|start"
                android:textColor="@color/DimGray"
                android:textSize="16sp"
                android:text="이메일 아이디"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:maxLines="1"
                android:hint="id@gmail.com"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:gravity="center|start"
                android:padding="8dp"
                android:textSize="18sp"
                android:background="@drawable/bg_edit_text_01"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>


        <TextView
            android:gravity="center|start"
            android:textColor="@color/DimGray"
            android:textSize="16sp"
            android:text="* 등록하신 이메일로 임시 비밀번호가 발송됩니다."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:gravity="center|end"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:id="@+id/btn_cancel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="취소"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:id="@+id/btn_ok"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="이메일 발송"
                android:textColor="@color/RoyalBlue"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>

</layout>