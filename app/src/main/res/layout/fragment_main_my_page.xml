<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="kr.co.soundleader.android.lesson2n2.ui.main.viewmodel.MainMyPageViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">


                <LinearLayout
                    android:id="@+id/layout_user_logged"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@drawable/bg_my_page_card_01"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="center|top"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_launcher_background" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="20dp"
                            android:layout_weight="1"
                            android:gravity="center|top"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_user_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="이름"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_user_email"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                android:text="test@sl.com"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/btn_my_page_modify"

                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:background="@color/RoyalBlue"
                            android:gravity="center"
                            android:text="내 정보 수정"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                        <Button
                            android:id="@+id/btn_my_page_curriculum"
                            android:layout_marginStart="20dp"
                          android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:background="@color/RoyalBlue"
                            android:gravity="center"
                            android:text="커리큘럼 관리"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_need_login"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@drawable/bg_my_page_card_01"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:visibility="gone">

                    <TextView
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="안녕하세요 :D"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <TextView
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="서비스 이용을 위해 로그인을 해주세요."
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                    <Button
                        android:layout_marginTop="20dp"
                        android:id="@+id/btn_go_login"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/RoyalBlue"
                        android:gravity="center"
                        android:onClick="@{(view)->viewModel.btnGoLoginClicked(view)}"
                        android:text="로그인"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <!---->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_my_page_card_01"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginEnd="10dp"
                        android:adjustViewBounds="true"
                        android:padding="4dp"
                        android:src="@drawable/ic_launcher_background" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|start"
                        android:text="알림설정"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:adjustViewBounds="true"
                        android:padding="4dp"
                        android:src="@drawable/ico_arrow_right_01" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_my_page_card_01"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginEnd="10dp"
                        android:adjustViewBounds="true"
                        android:padding="4dp"
                        android:src="@drawable/ic_launcher_background" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:gravity="center|start"
                        android:text="피아노 연결"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:adjustViewBounds="true"
                        android:padding="4dp"
                        android:src="@drawable/ico_arrow_right_01" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center|start"
                    android:paddingStart="10dp"
                    android:text="고객센터"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_my_page_card_01"
                    android:gravity="center"
                    android:orientation="vertical"

                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginEnd="10dp"
                            android:adjustViewBounds="true"
                            android:padding="4dp"
                            android:src="@drawable/ic_launcher_background" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:text="공지사항"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:adjustViewBounds="true"
                            android:padding="4dp"
                            android:src="@drawable/ico_arrow_right_01" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/menu_line_color_01" />

                    <LinearLayout
                        android:id="@+id/layout_ask"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginEnd="10dp"
                            android:adjustViewBounds="true"
                            android:padding="4dp"
                            android:src="@drawable/ic_launcher_background" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:text="문의하기"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:adjustViewBounds="true"
                            android:padding="4dp"
                            android:src="@drawable/ico_arrow_right_01" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/menu_line_color_01" />
                    <LinearLayout
                        android:id="@+id/layout_faq"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginEnd="10dp"
                            android:adjustViewBounds="true"
                            android:padding="4dp"
                            android:src="@drawable/ic_launcher_background" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:text="FAQ"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:adjustViewBounds="true"
                            android:padding="4dp"
                            android:src="@drawable/ico_arrow_right_01" />

                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/layout_leave"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/menu_line_color_01" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp">

                            <ImageView
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:layout_marginEnd="10dp"
                                android:adjustViewBounds="true"
                                android:padding="4dp"
                                android:src="@drawable/ic_launcher_background" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"

                                android:layout_weight="1"
                                android:gravity="center|start"
                                android:text="회원탈퇴"
                                android:textSize="18sp" />

                            <ImageView
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:adjustViewBounds="true"
                                android:padding="4dp"
                                android:src="@drawable/ico_arrow_right_01" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center|start"
                    android:paddingStart="10dp"
                    android:text="앱 정보"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_my_page_card_01"
                    android:gravity="center"
                    android:orientation="vertical"

                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginEnd="10dp"
                            android:adjustViewBounds="true"
                            android:padding="4dp"
                            android:src="@drawable/ic_launcher_background" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:text="현재 버전 : 1.0.0"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:adjustViewBounds="true"
                            android:padding="4dp"
                            android:src="@drawable/ico_arrow_right_01" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/menu_line_color_01" />

                    <LinearLayout
                      android:id="@+id/layout_term_of_use"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginEnd="10dp"
                            android:adjustViewBounds="true"
                            android:padding="4dp"
                            android:src="@drawable/ic_launcher_background" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:text="이용약관"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:adjustViewBounds="true"
                            android:padding="4dp"
                            android:src="@drawable/ico_arrow_right_01" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/menu_line_color_01" />

                    <LinearLayout
                        android:id="@+id/layout_privacy"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_marginEnd="10dp"
                            android:adjustViewBounds="true"
                            android:padding="4dp"
                            android:src="@drawable/ic_launcher_background" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:text="개인정보처리방침"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:adjustViewBounds="true"
                            android:padding="4dp"
                            android:src="@drawable/ico_arrow_right_01" />

                    </LinearLayout>
                </LinearLayout>













                <LinearLayout
                    android:onClick="@{(view)->viewModel.btnUserLogoutClicked(view)}"
                    android:id="@+id/layout_logout"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_my_page_card_03"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:text="로그아웃"
                        android:textColor="@color/DimGray"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>





            </LinearLayout>


        </androidx.core.widget.NestedScrollView>













    </RelativeLayout>
</layout>